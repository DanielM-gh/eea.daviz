<configure
  xmlns="http://namespaces.zope.org/zope"
  xmlns:browser="http://namespaces.zope.org/browser"
  i18n_domain="eea.daviz">

  <adapter factory=".displays.DynamicViews" />

  <browser:page
    for="eea.daviz.interfaces.IExhibitJson"
    name="daviz-view.html"
    template="view.pt"
    class=".view.View"
    permission="zope2.View"
    />

  <browser:page
    for="eea.daviz.interfaces.IExhibitJson"
    name="daviz-view.json"
    class=".view.View"
    attribute="json"
    permission="zope2.View"
    />

</configure>
